@model List<WatchExpo.Models.Customer>

@{
    Layout = "/Views/Shared/_OLayout.cshtml";
      
}

  
         <div style="padding-left:300px">
        <form action="/Client/SaveCus" method="post" enctype="multipart/form-data" >
             <div class="form-group">
                <label for="pwd" >User name</label>
                <input type="text" class="form-control" id="name" name="Username" />
                 <div>
                <input type="button" id="button" name="btn" value="Check Availability" />
                    </div>
            </div>
            <div id="showdv" >

            </div>
            <div class="form-group">
                <label for="pwd">Password</label>
                <input type="password" class="form-control" id="pwd" name="Password"/>
            </div>
            
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="Text1" name="Name"/>
            </div>
            <div class="form-group">
                <label for="mail">Email</label>
                <input type="email" class="form-control" id="email" name="Email" />
            </div>
            <div class="form-group">
                <label for="cell">Cell#</label>
                <input type="tel" class="form-control" id="cell" name="CellNo"/>
            </div>
            
            <div class="form-group">
                <label for="add">Full Address</label>
                <input type="text" style="width:500px" name="Address" />
            </div>
            <div class="form-control">
                <label for="uploading">upload photo</label>
                <input type="file" class="form-control"   name="n1" />
            </div>
            <button type="submit" class="btn btn-Info">Add</button>
        </form>
     </div>
       
   
 <script >
       
       $(document).ready(function () { })
       
       $('#brand1').popover(); 
       $('#button').click(function () {


           var userName = $('#name').val();

           //alert('User Name ='+ userName);

           $.getJSON("/client/CheckUserName?Uname=" + userName, function (data) {
               $('#checking').hide();
               if (data) {
                   $('#showdv').text("User already exists in database");

               }
               else {
                   $('#showdv').text("User Name is available");
               }
           })

       });

        
    </script>